<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="#ffffff">







    <TextView

        android:text="현재 위치"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:gravity="center"

        android:textSize="25dp"

        android:textColor="#000000"

        android:layout_marginTop="20dp"

        android:shadowColor="#FF464646"

        android:shadowDx="1.0"

        android:shadowDy="1.0"

        android:shadowRadius="1.0"



        />

    <TextView

        android:text="12층 대피소"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:gravity="center"

        android:textSize="30dp"

        android:textColor="#4583c3"

        android:layout_marginTop="50dp"

        android:shadowColor="#FF464646"

        android:shadowDx="1.0"

        android:shadowDy="1.0"

        android:shadowRadius="1.0"





        />

    <TextView

        android:text="담당관 부산 남구 소방서 OOO 소방관"

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:gravity="center"

        android:textSize="25dp"

        android:background="#DDDDDD"

        android:textColor="#000000"

        android:layout_marginTop="90dp"

        android:shadowColor="#FF464646"

        android:shadowDx="1.0"

        android:shadowDy="1.0"

        android:shadowRadius="1.0"





        />



    <TextView

        android:text="* 구조 요청 시, 비콘으로 연결된 GPS가 작동하여 '사용자 정보'와 '현재 위치'가 전송됩니다."

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:gravity="left"

        android:textSize="18dp"

        android:textColor="#FF464646"

        android:layout_marginTop="150dp"







        />

    <TextView

        android:text="* 구조 요청이 접수되면 '현재 구조 현황' 및 '실시간 구조 현황'을 확인할 수 있습니다."

        android:layout_width="match_parent"

        android:layout_height="wrap_content"

        android:gravity="left"

        android:textSize="18dp"

        android:textColor="#FF464646"

        android:layout_marginTop="200dp"







        />











    <EditText

        android:layout_width="match_parent"

        android:layout_height="160dp"

        android:layout_marginTop="250dp"

        android:hint="구조 요청 내용 및 특이사항"

        android:layout_weight="1"

        android:background="#9E9E9E"

        />



    <Button

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="구조 요청"

        android:layout_marginTop="430dp"

        android:layout_marginLeft="260dp"

        android:background="#0D47A1"

        android:textColor="#ffffff"



        />







</RelativeLayout>